<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 圆角imageview -->
    <declare-styleable name="RoundedImageView">
        <attr name="riCornerRadius" format="dimension" />
        <attr name="riTopLeftRadius" format="dimension" />
        <attr name="riTopRightRadius" format="dimension" />
        <attr name="riBottomLeftRadius" format="dimension" />
        <attr name="riBottomRightRadius" format="dimension" />
    </declare-styleable>

    <!-- 圆角view -->
    <declare-styleable name="RoundedCornerView">
        <attr name="rcCornerRadius" format="dimension" />
        <attr name="rcViewColor" format="color"/>
    </declare-styleable>

    <!-- 圆形进度条 -->
    <declare-styleable name="CircularProgressView">
        <attr name="cpbTrackColor" format="color" />
        <attr name="cpbProgressColor" format="color" />
        <attr name="cpbTrackThickness" format="dimension" />
        <attr name="cpbProgressThickness" format="dimension" />
        <attr name="cpbRoundIndication" format="boolean"/>
        <attr name="cpbProgress" format="integer" />
    </declare-styleable>

    <!-- 阴影view -->
    <declare-styleable name="AdvancedCardView">
        <attr format="enum" name="adv_background_Type">
            <!-- 视图背景填充类型 仅内部填充、仅描边 填充&描边-->
            <enum name="fill" value="0"/>
            <enum name="stroke" value="1"/>
            <enum name="fill_stroke" value="2"/>
        </attr>
        <attr format="enum" name="adv_background_ColorType">
            <enum name="solid" value="0"/>
            <enum name="gradient_linear" value="1"/>
            <enum name="gradient_radial" value="2"/>
            <enum name="gradient_sweep" value="3"/>
        </attr>
        <attr format="color" name="adv_background_Color"/>
        <!--        <attr name="background_Src" format="reference"/>-->
        <attr format="color" name="adv_background_Gradient_Color0"/>
        <attr format="color" name="adv_background_Gradient_Color1"/>
        <attr format="color" name="adv_background_Gradient_Color2"/>
        <attr format="color" name="adv_background_Gradient_Color3"/>
        <attr format="color" name="adv_background_Gradient_Color4"/>
        <attr format="color" name="adv_background_Gradient_Color5"/>
        <attr format="color" name="adv_background_Gradient_Color6"/>
        <attr format="color" name="adv_background_Gradient_ColorEnd"/>
        <attr format="float" name="adv_background_Gradient_Angle"/>
        <attr format="float" name="adv_background_Gradient_OffCenter_X"/>
        <attr format="float" name="adv_background_Gradient_OffCenter_Y"/>
        <!--        <attr name="background_Gradient_Radius_Multiplier" format="float"/>-->
        <!--        <attr name="background_Gradient_Radius" format="dimension"/>-->
        <attr format="float" name="adv_background_Alpha"/>
        <attr format="enum" name="adv_stroke_Type">
            <enum name="solid" value="0"/>
            <enum name="dash" value="1"/>
        </attr>
        <attr format="enum" name="adv_stroke_ColorType">
            <enum name="solid" value="0"/>
            <enum name="gradient_linear" value="1"/>
            <enum name="gradient_sweep" value="3"/>
        </attr>
        <attr format="color" name="adv_stroke_Color"/>
        <attr format="color" name="adv_stroke_Gradient_Color0"/>
        <attr format="color" name="adv_stroke_Gradient_Color1"/>
        <attr format="color" name="adv_stroke_Gradient_Color2"/>
        <attr format="color" name="adv_stroke_Gradient_Color3"/>
        <attr format="color" name="adv_stroke_Gradient_Color4"/>
        <attr format="color" name="adv_stroke_Gradient_Color5"/>
        <attr format="color" name="adv_stroke_Gradient_Color6"/>
        <attr format="color" name="adv_stroke_Gradient_ColorEnd"/>
        <attr format="float" name="adv_stroke_Gradient_Angle"/>
        <attr format="float" name="adv_stroke_Gradient_OffCenter_X"/>
        <attr format="float" name="adv_stroke_Gradient_OffCenter_Y"/>
        <attr format="float" name="adv_stroke_Alpha"/>
        <attr format="dimension" name="adv_stroke_Width"/>
        <attr format="dimension" name="adv_stroke_DashSize"/>
        <attr format="dimension" name="adv_stroke_GapSize"/>
        <attr format="enum" name="adv_stroke_CapType">
            <enum name="square" value="0"/>
            <enum name="butt" value="1"/>
            <enum name="round" value="2"/>
        </attr>
        <attr format="color" name="adv_shadow0_Outer_Color"/>
        <attr format="float" name="adv_shadow0_Outer_Alpha"/>
        <attr format="dimension" name="adv_shadow0_Outer_Distance"/>
        <attr format="dimension" name="adv_shadow0_Outer_Blur"/>
        <attr format="float" name="adv_shadow0_Outer_Angle"/>
        <attr format="color" name="adv_shadow1_Outer_Color"/>
        <attr format="float" name="adv_shadow1_Outer_Alpha"/>
        <attr format="dimension" name="adv_shadow1_Outer_Distance"/>
        <attr format="dimension" name="adv_shadow1_Outer_Blur"/>
        <attr format="float" name="adv_shadow1_Outer_Angle"/>
        <attr format="color" name="adv_shadow0_Inner_Color"/>
        <attr format="float" name="adv_shadow0_Inner_Alpha"/>
        <attr format="dimension" name="adv_shadow0_Inner_Distance"/>
        <attr format="dimension" name="adv_shadow0_Inner_Blur"/>
        <attr format="float" name="adv_shadow0_Inner_Angle"/>
        <attr format="color" name="adv_shadow1_Inner_Color"/>
        <attr format="float" name="adv_shadow1_Inner_Alpha"/>
        <attr format="dimension" name="adv_shadow1_Inner_Distance"/>
        <attr format="dimension" name="adv_shadow1_Inner_Blur"/>
        <attr format="float" name="adv_shadow1_Inner_Angle"/>
        <attr format="dimension" name="adv_shadow_Outer_Area"/>
        <attr format="enum" name="adv_corner_Type">
            <enum name="custom" value="0"/>
            <enum name="rectangular" value="1"/>
            <enum name="circular" value="2"/>
            <enum name="third" value="3"/>
            <enum name="quarter" value="4"/>
        </attr>
        <attr format="dimension" name="adv_cornerRadius_TopLeft"/>
        <attr format="dimension" name="adv_cornerRadius_TopRight"/>
        <attr format="dimension" name="adv_cornerRadius_BottomLeft"/>
        <attr format="dimension" name="adv_cornerRadius_BottomRight"/>
        <attr format="dimension" name="adv_cornerRadius"/>
    </declare-styleable>

    <declare-styleable name="Themes">
        <attr format="reference" name="waveViewStyle"/>
    </declare-styleable>
    <declare-styleable name="WaveView">
        <attr format="color" name="solid_start_color"/>
        <attr format="color" name="solid_end_color"/>
        <attr format="color" name="wave_blow_color"/>
        <attr format="integer" name="progress"/>
        <attr format="enum" name="wave_length">
            <enum name="large" value="1"/>
            <enum name="middle" value="2"/>
            <enum name="little" value="3"/>
        </attr>
        <attr name="wave_height" format="enum">
            <enum name="large" value="1" />
            <enum name="middle" value="2" />
            <enum name="little" value="3" />
        </attr>
        <attr name="wave_hz" format="enum">
            <enum name="fast" value="1" />
            <enum name="normal" value="2" />
            <enum name="slow" value="3" />
        </attr>
    </declare-styleable>

    <!-- 自动横向排列组件 -->
    <declare-styleable name="AutoWrapLayout">
        <attr name="awHorSpace" format="dimension" />
        <attr name="awVerSpace" format="dimension" />
        <attr name="awIsAdaptive" format="boolean"/>
    </declare-styleable>

    <!-- 圆角cardView -->
    <declare-styleable name="RadiusCardView">
        <attr name="rcvTopLeftRadius" format="dimension" />
        <attr name="rcvTopRightRadius" format="dimension" />
        <attr name="rcvBottomRightRadius" format="dimension" />
        <attr name="rcvBottomLeftRadius" format="dimension" />
    </declare-styleable>
</resources>